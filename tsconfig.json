{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"~/*": [
				"./playground/*"
			],
			"~styles/*": [
				"./playground/assets/styles/*"
			],
			"~components/*": [
				"./playground/views/components/*"
			]
		},
		"typeRoots": [
			"./node_modules/"
		],
		"types": [
			"@types/node",
			"@nuxt/types"
		]
	}
}
